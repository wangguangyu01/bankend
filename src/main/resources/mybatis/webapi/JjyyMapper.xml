<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smart119.webapi.dao.JjyyDao">

    <select id="get" resultType="com.smart119.webapi.domain.JjyyDO">
        SELECT
            `id`,
            `name`,
            `type`,
            `remarks`,
            `cdate`,
            `cperson`,
            `status`
        FROM jjyy
        WHERE id = #{value}
    </select>

    <select id="list" resultType="com.smart119.webapi.domain.JjyyDO">
        select `id`,`name`,`type`,`remarks`,`cdate`,`cperson`,`status` from jjyy
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="name != null and name != ''">and name = #{name}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="remarks != null and remarks != ''">and remarks = #{remarks}</if>
            <if test="cdate != null and cdate != ''">and cdate = #{cdate}</if>
            <if test="cperson != null and cperson != ''">and cperson = #{cperson}</if>
            <if test="status != null and status != ''">and status = #{status}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from jjyy
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="name != null and name != ''">and name = #{name}</if>
            <if test="type != null and type != ''">and type = #{type}</if>
            <if test="remarks != null and remarks != ''">and remarks = #{remarks}</if>
            <if test="cdate != null and cdate != ''">and cdate = #{cdate}</if>
            <if test="cperson != null and cperson != ''">and cperson = #{cperson}</if>
            <if test="status != null and status != ''">and status = #{status}</if>
        </where>
    </select>

    <insert id="save" parameterType="com.smart119.webapi.domain.JjyyDO">
        INSERT INTO jjyy
        (
            `id`,
            `name`,
            `type`,
            `remarks`,
            `cdate`,
            `cperson`,
            `status`
        )
        VALUES
            (
                #{id},
                #{name},
                #{type},
                #{remarks},
                #{cdate},
                #{cperson},
                #{status}
            )
    </insert>

    <update id="update" parameterType="com.smart119.webapi.domain.JjyyDO">
        update jjyy
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="type != null">`type` = #{type},</if>
            <if test="remarks != null">`remarks` = #{remarks},</if>
            <if test="cdate != null">`cdate` = #{cdate},</if>
            <if test="cperson != null">`cperson` = #{cperson},</if>
            <if test="status != null">`status` = #{status}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="remove">
        DELETE FROM jjyy
        WHERE id = #{value}
    </delete>

    <delete id="batchRemove">
        delete from jjyy where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="listlanguageType" resultType="com.smart119.webapi.domain.JjyyDO">
        SELECT
            name,
            value
        FROM sys_dict A
        WHERE A.type = 'JJYYLX' AND A.parent_id != 0
    </select>

    <select id="size" resultType="int">
        SELECT count(*)
        FROM sys_dict A
        WHERE A.type = 'JJYYLX' AND A.parent_id != 0
    </select>

    <select id="listlanguage" resultType="com.smart119.webapi.domain.JjyyDO">
        SELECT
            A.name,
            A.type,
            B.name AS ZBRY_XFZBJSLBDM
        FROM jjyy A, sys_dict B
        WHERE A.type = B.value AND A.type = #{value} AND A.status = '0' AND B.type = 'JJYYLX'
        ORDER BY A.cdate DESC
    </select>

    <select id="languageSize" resultType="int">
        SELECT count(*)
        FROM jjyy A, sys_dict B
        WHERE A.type = B.value AND A.type = #{value} AND A.status = '0' AND B.type = 'JJYYLX'
        ORDER BY A.cdate DESC
    </select>
</mapper>