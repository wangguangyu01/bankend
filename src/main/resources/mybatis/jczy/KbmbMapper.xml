<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smart119.jczy.dao.KbmbDao">

	<select id="get" resultType="com.smart119.jczy.domain.KbmbDO">
		select `kbmb_id`,`name`,`content`,`remarks`,`cdate`,`cperson`,`status` from jczy_kbmb where kbmb_id = #{value}
	</select>

	<select id="list" resultType="com.smart119.jczy.domain.KbmbDO">
		select `kbmb_id`,`name`,`content`,`remarks`,`cdate`,`cperson`,`status` from jczy_kbmb
        <where>  
		  		  <if test="kbmbId != null and kbmbId != ''"> and kbmb_id = #{kbmbId} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="content != null and content != ''"> and content = #{content} </if>
		  		  <if test="remarks != null and remarks != ''"> and remarks = #{remarks} </if>
		  		  <if test="cdate != null and cdate != ''"> and cdate = #{cdate} </if>
		  		  <if test="cperson != null and cperson != ''"> and cperson = #{cperson} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by kbmb_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from jczy_kbmb
		 <where>  
		  		  <if test="kbmbId != null and kbmbId != ''"> and kbmb_id = #{kbmbId} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="content != null and content != ''"> and content = #{content} </if>
		  		  <if test="remarks != null and remarks != ''"> and remarks = #{remarks} </if>
		  		  <if test="cdate != null and cdate != ''"> and cdate = #{cdate} </if>
		  		  <if test="cperson != null and cperson != ''"> and cperson = #{cperson} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.smart119.jczy.domain.KbmbDO">
		insert into jczy_kbmb
		(
			`kbmb_id`, 
			`name`, 
			`content`, 
			`remarks`, 
			`cdate`, 
			`cperson`, 
			`status`
		)
		values
		(
			#{kbmbId}, 
			#{name}, 
			#{content}, 
			#{remarks}, 
			#{cdate}, 
			#{cperson}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.smart119.jczy.domain.KbmbDO">
		update jczy_kbmb 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="remarks != null">`remarks` = #{remarks}, </if>
			<if test="cdate != null">`cdate` = #{cdate}, </if>
			<if test="cperson != null">`cperson` = #{cperson}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where kbmb_id = #{kbmbId}
	</update>
	
	<delete id="remove">
		delete from jczy_kbmb where kbmb_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from jczy_kbmb where kbmb_id in 
		<foreach item="kbmbId" collection="array" open="(" separator="," close=")">
			#{kbmbId}
		</foreach>
	</delete>

</mapper>