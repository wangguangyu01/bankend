<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smart119.jczy.dao.XfclSxzDao">

	<select id="get" resultType="com.smart119.jczy.domain.XfclSxzDO">
		select `id`,`xfcl_id`,`xfcl_sx_id`,`sxz` from jczy_xfcl_sxz where id = #{value}
	</select>

	<select id="list" resultType="com.smart119.jczy.domain.XfclSxzDO">
		select `id`,`xfcl_id`,`xfcl_sx_id`,`sxz` from jczy_xfcl_sxz
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="xfclId != null and xfclId != ''"> and xfcl_id = #{xfclId} </if>
		  		  <if test="xfclSxId != null and xfclSxId != ''"> and xfcl_sx_id = #{xfclSxId} </if>
		  		  <if test="sxz != null and sxz != ''"> and sxz = #{sxz} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from jczy_xfcl_sxz
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="xfclId != null and xfclId != ''"> and xfcl_id = #{xfclId} </if>
		  		  <if test="xfclSxId != null and xfclSxId != ''"> and xfcl_sx_id = #{xfclSxId} </if>
		  		  <if test="sxz != null and sxz != ''"> and sxz = #{sxz} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.smart119.jczy.domain.XfclSxzDO">
		insert into jczy_xfcl_sxz
		(
			`id`, 
			`xfcl_id`, 
			`xfcl_sx_id`, 
			`sxz`
		)
		values
		(
			#{id}, 
			#{xfclId}, 
			#{xfclSxId}, 
			#{sxz}
		)
	</insert>
	 
	<update id="update" parameterType="com.smart119.jczy.domain.XfclSxzDO">
		update jczy_xfcl_sxz 
		<set>
			<if test="xfclId != null">`xfcl_id` = #{xfclId}, </if>
			<if test="xfclSxId != null">`xfcl_sx_id` = #{xfclSxId}, </if>
			<if test="sxz != null">`sxz` = #{sxz}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from jczy_xfcl_sxz where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from jczy_xfcl_sxz where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>


	<select id="getSxzlist" resultType="com.smart119.jczy.domain.XfclSxzDO">
		SELECT
			z.xfcl_id,z.sxz,s.clsx,s.sfzs,s.dw
		FROM
			jczy_xfcl_sxz z
			LEFT JOIN jczy_xfcl_sx s ON z.xfcl_sx_id = s.id
		where s.sfzs=1
	</select>


</mapper>